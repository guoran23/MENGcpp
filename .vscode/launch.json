{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MPI_debug", // Debug configuration name
            "type": "cppdbg", // Debugger type (C++ GDB/LLDB)
            "MIMode": "gdb", // Debug backend
            "preLaunchTask": "Build MPI", // Run task before debugging
            "request": "attach", // Attach to a running process
            "processId": "${command:pickProcess}", // Select process to attach
            "program": "${workspaceFolder}/build_MPI/bin/simulation", // Target program
            "args": [], // Program arguments
            "cwd": "${workspaceFolder}/build_MPI/bin/", // Working directory
            "environment": [], // Environment variables  
            "externalConsole": false, // Use VSCode's terminal
            "stopAtEntry": false, // Don't stop at entry point
            "setupCommands": [
                {
                    "description": "Enable GDB pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]                
        }
    ]
}
